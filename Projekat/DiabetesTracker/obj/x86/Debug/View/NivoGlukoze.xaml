<Page
    x:Class="DiabetesTracker.NivoGlukoze"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rules="using:WinUX.Data.Validation.Rules"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:validation1="using:WinUX.Data.Validation"
    mc:Ignorable="d">



    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">




        <Grid Width="500" Height="250">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock x:ConnectionId='1' Name="Hiper" Text="Hiperglikemija:" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" FontSize="16"/>
            <TextBox x:ConnectionId='2' Name="HiperBox" Grid.Column="0" Grid.Row="1"  BorderBrush="#FF6189C5" Grid.ColumnSpan="1" Height="36" VerticalAlignment="Top"/>
            <TextBlock x:ConnectionId='3' Name="Hipo" Text="Hipoglikemija:" Grid.Column="2" Grid.ColumnSpan="1"  HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" FontSize="16"/>
            <TextBox x:ConnectionId='4' Name="HipoBox" Grid.ColumnSpan="1" Grid.Column="2" Grid.Row="1"  BorderBrush="#FF6189C5"/>
            <TextBlock x:ConnectionId='5' Name="Ciljani" Text="Ciljani nivo glukoze:" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" FontSize="16"/>
            <TextBox x:ConnectionId='6' Name="CiljaniBox" Grid.ColumnSpan="1" Grid.Column="1" Grid.Row="3"  BorderBrush="#FF6189C5" />
            <TextBlock x:ConnectionId='7' Name="Donja" Text="Donja granica glukoze:"  Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" FontSize="16"/>
            <TextBox x:ConnectionId='8' Name="DonjaBox" Grid.Column="0" Grid.Row="5"  BorderBrush="#FF6189C5" Grid.ColumnSpan="1"/>
            <TextBlock x:ConnectionId='9' Name="Gornja" Text="Gornja granica glukoze:" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" FontSize="16" Grid.ColumnSpan="1"/>
            <TextBox x:ConnectionId='10' Name="GornjaBox" Grid.Column="2" Grid.Row="5" BorderBrush="#FF6189C5" Grid.ColumnSpan="1" />
            <Button x:ConnectionId='11' Name="Dugme" Width="110" Content="Registrujte se" Background="#FF6189C5" Margin="0,0,0,0.4" Foreground="White" HorizontalAlignment="Right" Grid.Column="2" Grid.ColumnSpan="1" Grid.Row="6"  VerticalAlignment="Bottom" Height="33" RenderTransformOrigin="0.5,0.506"                     />
            <TextBlock x:ConnectionId='12' Name="mol" Text="mmol/L" Grid.Column="2" Margin="0,0,5,0" VerticalAlignment="Center"  Grid.Row="1" FontSize="14" Foreground="Gray"  HorizontalAlignment="Right"  FontStyle="Italic" />
            <TextBlock x:ConnectionId='13' Name="mol1" Text="mmol/L" Grid.Column="2" Margin="0,0,5,0"  VerticalAlignment="Center"  Grid.Row="5" FontSize="14" Foreground="Gray" HorizontalAlignment="Right"  FontStyle="Italic" />
            <TextBlock x:ConnectionId='14' Name="mol2" Text="mmol/L" Grid.Column="1" Margin="0,0,5,0" VerticalAlignment="Center"  Grid.Row="3" FontSize="14" Foreground="Gray"  HorizontalAlignment="Right"  FontStyle="Italic" />
            <TextBlock x:ConnectionId='15' Name="mol3" Text="mmol/L" Grid.Column="0" Margin="0,0,5,0" VerticalAlignment="Center"  Grid.Row="1" FontSize="14" Foreground="Gray" HorizontalAlignment="Right" FontStyle="Italic" />
            <TextBlock x:ConnectionId='16' Name="mol4" Text="mmol/L" Grid.Column="0" Margin="0,0,5,0" VerticalAlignment="Center"  Grid.Row="5" FontSize="14" Foreground="Gray" HorizontalAlignment="Right" FontStyle="Italic"/>
        </Grid>
    </Grid>
</Page>

